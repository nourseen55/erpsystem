@model Erp.Application.ViewModels.CategoriesFilterVM
@{
    ViewData["Title"] = "إدارة التصنيفات";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/categories.css" />

<div class="container mt-4">
    <h2 class="mb-4 text-center fw-bold text-secondary">إدارة التصنيفات</h2>

    <div class="card shadow-sm border-0 rounded-4 p-4 mb-4">
        <form id="filterForm" class="row gy-3 gx-3 align-items-end justify-content-center">

            <div class="row mb-4 mt-2">
                <div class="col-md-4 offset-md-4">
                    <div class="input-group shadow-sm">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="bi bi-search text-secondary"></i>
                        </span>
                        <input type="text"
                               id="Search"
                               name="Search"
                               value="@Model.Search"
                               class="form-control border-start-0"
                               placeholder="ابحث باسم التصنيف أو البراند أو الحالة..." />
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <label for="Name" class="form-label fw-semibold text-secondary">الاسم</label>
                <input type="text" id="Name" class="form-control rounded-pill small-input" placeholder="اسم التصنيف" />
            </div>

            <div class="col-md-3">
                <label for="BrandId" class="form-label fw-semibold text-secondary">البراند</label>
                <select id="BrandId" class="form-select rounded-pill small-input">
                    <option value="">الكل</option>
                    @foreach (var brand in Model.Brands)
                    {
                        <option value="@brand.Value">@brand.Text</option>
                    }
                </select>
            </div>

            <div class="col-md-3 d-flex align-items-center justify-content-center gap-4">
                <div class="form-check form-switch fs-5">
                    <input class="form-check-input active-switch" type="checkbox" id="ActiveCheck" value="true">
                    <label class="form-check-label" for="ActiveCheck">مفعل</label>
                </div>
                <div class="form-check form-switch fs-5">
                    <input class="form-check-input inactive-switch" type="checkbox" id="InactiveCheck" value="false">
                    <label class="form-check-label" for="InactiveCheck">غير مفعل</label>
                </div>
            </div>

            <div class="col-md-3 d-flex gap-3 justify-content-center">
                <button type="button" id="btnFilter" class="btn btn-lg text-white fw-bold rounded-pill flex-fill"
                        style="background-color: sienna;">
                    فلترة
                </button>
                <button type="button" id="btnReset" class="btn btn-lg btn-outline-secondary rounded-pill flex-fill">
                    إعادة تعيين
                </button>
            </div>
        </form>
    </div>

    <table id="categoriesTable" class="table table-striped table-hover align-middle shadow-sm rounded-3" style="width:100%">
        <thead>
            <tr>
                <th>المعرف</th>
                <th>الاسم</th>
                <th>البراند</th>
                <th>الحالة</th>
            </tr>
        </thead>
    </table>
</div>


@section Scripts {
  
    <script src="~/js/categories.js"></script>
}
